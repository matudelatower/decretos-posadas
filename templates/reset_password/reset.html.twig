{% extends 'security/base.html.twig' %}

{% block title %}Crear nueva contraseña{% endblock %}

{% block body %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h4 class="activities-sidbar">Creá una nueva contraseña</h4>
                    <p>Para poder ingresar a la plataforma necesitás crear una nueva contraseña.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div id="errores" aria-live="polite" class="alert alert-danger hidden">
                        <h5>Se han producido los siguientes errores:</h5>
                        <ol>
                            <li>Ingresá tu contraseña</li>
                        </ol>
                    </div>
                    {{ form_start(resetForm) }}
                    <div class="row">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-success">CREAR NUEVA CONTRASEÑA</button>
                        </div>
                    </div>
                    {{ form_end(resetForm) }}

                </div>


            </div>

        </div>
    </section>
{% endblock %}

