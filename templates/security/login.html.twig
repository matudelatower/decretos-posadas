{% extends 'security/base.html.twig' %}
{% block title %}Iniciar Sesión{% endblock %}
{% block body %}
    <section>
        <div class="container">
            <div class="row m-b-2">
                <div class="col-md-6 col-md-offset-3">
                    <h4 class="activities-sidbar">Ingresar </h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    {% if error %}
                        <div id="errores" aria-live="polite" class="alert alert-danger">
                            <h5>Se han producido los siguientes errores:</h5>
                            <ol>
                                <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>

                            </ol>
                        </div>
                    {% endif %}
                    <form method="post">
                        <div class="row">
                            <div class="col-md-10 form-group item-form">
                                <label for="usuario">Usuario</label>
                                <input type="text" value="{{ last_username }}" name="username" class="form-control"
                                       id="usuario" required autofocus
                                       aria-required="true">
                                <p class="help-block error hidden">Ingresá tu usuario</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10 form-group item-form">
                                <label for="password">Contraseña</label>
                                <input id="password" type="password" class="form-control"
                                       required
                                       name="password">
                                <p class="help-block error">Ingresá tu contraseña</p>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="row">
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-success">INGRESAR</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10">
                                <hr>
                            </div>
                        </div>

                    </form>


                    <div class="row">
                        <div class="col-xs-12">
                            <p><a href="{{ path('app_forgot_password_request') }}">Recuperar mi contraseña</a></p>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </section>
{% endblock body %}
